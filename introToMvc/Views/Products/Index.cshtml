<!DOCTYPE html>
    <html>
    <head>
        <title></title>
    </head>
    <body>
    @{
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Name</th>
                    <th scope="col">Description</th>
                    <th scope="col">Price</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var product in @Model)
                {    
                <tr>
                    <th scope="row">@product.Id</th>
                    <td>@product.Name</td>
                    <td><a href="/Products/Details/@product.Id">Details</a></td>
                    <td>@product.Price</td>
                </tr>
                }
               
            </tbody>
        </table>

    }
    </body>
    </html>